<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solar System on OSM</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <style>
        #map {
            height: 600px;
            width: 100%;
        }
    </style>
</head>
<body>
    <h1>Solar System on OSM</h1>
    <div id="map"></div>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        // 初始化地图
        var map = L.map('map').setView([51.505, -0.09], 2);

        // 添加OSM图层
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // 太阳系行星数据（平均距离太阳的距离，单位：百万公里）
        var planets = [
            { name: 'Mercury', distance: 57.9 },
            { name: 'Venus', distance: 108.2 },
            { name: 'Earth', distance: 149.6 },
            { name: 'Mars', distance: 227.9 },
            { name: 'Jupiter', distance: 778.3 },
            { name: 'Saturn', distance: 1427 },
            { name: 'Uranus', distance: 2871 },
            { name: 'Neptune', distance: 4497.1 }
        ];

        // 地球半径，单位：公里
        var earthRadius = 6371;

        // 比例系数，用于将行星的平均距离转换为地球上的距离
        var scaleFactor = 1e-6;

        // 点击地图事件处理函数
        function onMapClick(e) {
            var baseLatLng = e.latlng;

            // 清除之前的行星标记
            map.eachLayer(function (layer) {
                if (layer instanceof L.Marker && layer !== baseMarker) {
                    map.removeLayer(layer);
                }
            });

            // 添加行星标记
            planets.forEach(function (planet) {
                var distance = planet.distance * scaleFactor * earthRadius;
                var angle = Math.random() * 2 * Math.PI;
                var offsetX = distance * Math.cos(angle);
                var offsetY = distance * Math.sin(angle);

                var planetLatLng = L.latLng(baseLatLng.lat + (offsetY / earthRadius) * (180 / Math.PI), 
                                            baseLatLng.lng + (offsetX / earthRadius) * (180 / Math.PI) / Math.cos(baseLatLng.lat * Math.PI / 180));

                L.marker(planetLatLng).addTo(map).bindPopup(planet.name);
            });
        }

        // 添加点击事件监听器
        map.on('click', onMapClick);

        // 初始化一个基本标记（例如，地球）
        var baseMarker = L.marker([51.505, -0.09]).addTo(map).bindPopup('Earth').openPopup();
    </script>
</body>
</html>
